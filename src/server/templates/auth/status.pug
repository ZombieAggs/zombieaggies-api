extends ../page.pug

block append head
    title ZombieAggies | Status

block append main
    .auth
        .auth-header
            h1 ZombieAggies
            h2 Status
        .auth-form
            p Hello #{(user.firstname ? user.firstname: user.username)}#{(user.access > 0 ? (user.access > 1 ? " (Administrator)" : " (Moderator)") : "")}!
            form(action='/auth/logout' method="get")
                button(type="submit") Logout